<Window x:Class="just_economy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:just_economy"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Title="MainWindow">

    <Grid Name="grid_principal"
          Height="720" 
          Width="1280"
          Background="Transparent">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="White"
                    CornerRadius="12 0 0 12"
                    Grid.Column="0">

            <Grid Name="grid_principal_painelEsquerdo">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <Label Style="{DynamicResource Label_título}"
                       Content="ECONOMIZE"/>

                <Border Style="{DynamicResource Border_imagem}"/>

                <Border Name="Border_Inicio" 
                        Style="{DynamicResource Border_menu}"
                        Grid.Row="3">

                    <Label Name="Label_Inicio"                          
                           Style="{DynamicResource Label_menu}"
                           Content="Inicio"/>

                </Border>

                <Border Name="Border_Extratos" 
                        Style="{DynamicResource Border_menu}"
                        Grid.Row="4">

                    <Label Name="Label_Extratos"                          
                           Style="{DynamicResource Label_menu}"
                           Content="Extratos"/>

                </Border>

                <Border Name="Border_Grupos" 
                        Style="{DynamicResource Border_menu}"
                        Grid.Row="5">

                    <Label Name="Label_Grupos"                          
                           Style="{DynamicResource Label_menu}"
                           Content="Grupos"/>

                </Border>

                <Border Name="Border_Ajustes" 
                        Style="{DynamicResource Border_menu}"
                        Grid.Row="6">

                    <Label Name="Label_Ajustes"                          
                           Style="{DynamicResource Label_menu}"
                           Content="Ajustes"/>

                </Border>

                <Border Name="Border_Sair" 
                        Style="{DynamicResource Border_Menu_Sair}"
                        Grid.Row="8">

                    <Label Name="Label_Sair"                          
                           Style="{DynamicResource Label_menu}"
                           Content="Sair"/>

                </Border>

            </Grid>

        </Border>

        <Border Background="#EAEAEA"
                CornerRadius="0 12 12 0"
                Grid.Column="1">

            <Grid Name="grid_principal_areaDeTrabalho"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"/>
        </Border>


    </Grid>

</Window>
    

